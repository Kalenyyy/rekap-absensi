{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production"
    },
    "watch": {
        "dev": {
            "patterns": [
                "resources/**/*",
                "tailwind.config.js"
            ],
            "extensions": "js,css,php"
        }
    },
    "devDependencies": {
        "autoprefixer": "^10.4.20",
        "axios": "^0.21",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "npm-watch": "^0.13.0",
        "postcss": "^8.4.41",
        "tailwindcss": "^3.4.7",
        "tailwindcss-animate": "^1.0.7",
        "tailwindcss-animated": "^1.1.2"
    },
    "dependencies": {
        "flowbite": "^2.5.1"
    }
}
